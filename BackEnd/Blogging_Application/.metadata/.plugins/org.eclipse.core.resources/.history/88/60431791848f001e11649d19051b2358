		return null;
	}

	@Override
	public CategoryDto getCategory(Integer cateId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<CategoryDto> getAllCategories() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void deleteCategory(Integer cateId) {
		// TODO Auto-generated method stub
		
	}

}
